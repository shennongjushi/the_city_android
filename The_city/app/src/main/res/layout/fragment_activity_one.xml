<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.binbinfu.the_city.Activity_one$PlaceholderFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_one"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/cover_one"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_action_time"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:id="@+id/date_one"/>

                    </LinearLayout>
                    <RelativeLayout
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#80444444"
                        android:id="@+id/direction">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:gravity="top"
                            android:id="@+id/address_place"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_action_place"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:layout_toRightOf="@+id/address_place"
                            android:id="@+id/address_one"
                            />
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_toRightOf="@+id/address_one"
                            android:src="@drawable/ic_action_next_item"/>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_action_labels"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:id="@+id/tag_one"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_action_person"/>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:textSize="12dp"
                            android:id="@+id/host_one"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/image_h"
                android:text="Image:"/>

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#00000000"
                android:src="@drawable/ic_action_new_picture"
                android:layout_toRightOf="@+id/image_h"
                />

            </RelativeLayout>
            <org.lucasr.twowayview.widget.TwoWayView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/TwoWayView"
                app:twowayview_layoutManager="ListLayoutManager"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:text="Details"/>
            <TextView
                android:id="@+id/details_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:padding="2dp" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center">

        <TextView
            android:id="@+id/like_action"
            android:text="Like"
            style="@style/StateText"/>

        <TextView
            android:id="@+id/take_action"
            android:text="Take"
            style="@style/StateText"/>

    </LinearLayout>
</FrameLayout>


